---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="My portfolio web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/portfolio-web/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-column justify-center">
		<slot />
	</body>

	<footer>

	</footer>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
		font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
	}
</style>